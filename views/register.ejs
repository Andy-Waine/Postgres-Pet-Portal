<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>
    <h1>Register</h1>

    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
        <li><%= error.message %></li>
        <% }) %> <% } %>
    </ul>

    <form action="/users/register" method="POST">
    <div>
        <input type="text" id="name" name="name" placeholder="Name" required />
    </div>
    <div>
        <input type="email" id="email" name="email" placeholder="Email" required />
    </div>
    <div>
        <input type="password" id="password" name="password" placeholder="Password" required />
    </div>
    <div>
        <input type="password" id="password2" name="password2" placeholder="Confirm Password" required />
    </div>
    <div>
        <input type="text" id="serialno" name="serialno" placeholder="Microchip Serial No." required />
    </div>
    <div>
        <input type="text" id="nameofpet" name="nameofpet" placeholder="Pet's Name" required />
    </div>
    <div>
        <input type="text" id="sexofpet" name="sexofpet" placeholder="Male or Female" required />
    </div>
    <div>
        <input type="text" id="speciesofpet" name="speciesofpet" placeholder="Species - Cat, Dog, Bird" required />
    </div>
    <div>
        <input type="text" id="breedofpet" name="breedofpet" placeholder="Breed" required />
    </div>
    <div>
        <input type="text" id="colorofpet" name="colorofpet" placeholder="Color/Markings" required />
    </div>
    <div>
        <input type="submit" value="Register" />
    </div>
    
    <br />
    <a href="/users/login">Already Registered? Login</a>
    </form>
</body>
</html>